<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="142sp"
        tools:layout_editor_absoluteY="349sp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:src="@drawable/school7"
            android:background="@color/white"
            android:contentDescription="@string/todo" />
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/whole_numbers"
            android:padding="16sp"
            android:layout_marginTop="20sp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#8BC34A"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/Exer2.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exercise 2.1"
            android:layout_marginTop="35sp"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            android:padding="18sp"
            android:textSize="22sp"
            android:background="@color/silver"
            app:drawableStartCompat="@drawable/pdf" />
        <TextView
            android:id="@+id/Exer2.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exercise 2.2"
            android:layout_marginTop="55sp"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            android:padding="18sp"
            android:textSize="22sp"
            android:background="@color/silver"
            app:drawableStartCompat="@drawable/pdf" />

        <TextView
            android:id="@+id/Exer2.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exercise 2.3"
            android:layout_marginTop="55sp"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            android:padding="18sp"
            android:textSize="22sp"
            android:background="@color/silver"
            app:drawableStartCompat="@drawable/pdf" />
        <Button
            android:id="@+id/back1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:background="@color/yellow"
            android:gravity="center"
            android:layout_marginLeft="150sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="80sp"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>